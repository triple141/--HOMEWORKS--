<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="200.0" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PetChooserController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <RadioButton fx:id="catRadioButton" text="კატა" toggleGroup="$petGroup" />
    <RadioButton fx:id="dogRadioButton" text="ძაღლი" toggleGroup="$petGroup" />
    <RadioButton fx:id="rabbitRadioButton" text="კურდღელი" toggleGroup="$petGroup" />
    <RadioButton fx:id="birdRadioButton" text="ჩიტი" toggleGroup="$petGroup" />
    <TextField fx:id="nameTextField" promptText="სახელი (ex: ბონი)" />
    <Button fx:id="chooseButton" text="არჩევა" onAction="#choosePet" />
    <Label fx:id="resultLabel" text="" />
    <ToggleGroup fx:id="petGroup" />
</VBox>