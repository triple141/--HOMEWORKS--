<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="350.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PetChooserController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <ImageView fx:id="imageView" fitHeight="250.0" fitWidth="380.0" pickOnBounds="true" preserveRatio="true" />
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="previousButton" text="Back" onAction="#showPrevious" />
        <Button fx:id="nextButton" text="Next" onAction="#showNext" />
    </HBox>
</VBox>