<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="200.0" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PetChooserController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="whitch type of card?" />
    <CheckBox fx:id="balloonsCheckBox" text="balloons" />
    <CheckBox fx:id="heartsCheckBox" text="hearts" />
    <CheckBox fx:id="starsCheckBox" text="stars" />
    <Button fx:id="generateButton" text="generate" onAction="#generateCard" />
</VBox>